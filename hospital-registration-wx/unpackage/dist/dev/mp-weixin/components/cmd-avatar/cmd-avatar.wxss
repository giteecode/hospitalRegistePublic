
.cmd-avatar {
	color: #fff;
	text-align: center;
	border-radius: 6rpx;
	background: #eee;
	box-shadow: 0 2px 1px -1px rgba(0, 0, 0, .2), 0 1px 1px 0 rgba(0, 0, 0, .14), 0 1px 3px 0 rgba(0, 0, 0, .12);
	overflow: hidden;
}
.cmd-avatar-img {
	width: 100%;
	height: 100%;
}
.cmd-avatar-lg {
	width: 128rpx;
	height: 128rpx;
	font-size: 64rpx;
	line-height: 128rpx;
}
.cmd-avatar-sm {
	width: 64rpx;
	height: 64rpx;
	font-size: 32rpx;
	line-height: 64rpx;
}
.cmd-avatar-md {
	width: 96rpx;
	height: 96rpx;
	font-size: 48rpx;
	line-height: 96rpx;
}
.cmd-avatar-square {
	border-radius: 6rpx;
	background-clip: border-box;
	overflow: hidden;
}
.cmd-avatar-circle {
	border-radius: 50%;
	background-clip: border-box;
	overflow: hidden;
}

